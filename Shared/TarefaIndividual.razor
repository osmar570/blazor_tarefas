<td><button @onclick="@(() => RemoverTarefa.InvokeAsync(item))" class="btn btn-danger"><i class="oi oi-trash"></i></button></td>
<td>@item.DataCriacao.ToString("dd/MM/yyyy")</td>
<td>@item.Descricao</td>
<td><input type="checkbox" @bind="@item.Concluida" /></td>

@code{
    [Parameter] public Tarefa item { get; set; }
    [Parameter] public EventCallback<Tarefa> RemoverTarefa { get; set; }

}